<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="256dp" android:background="?attr/colorPrimaryDark"
    android:padding="16dp" android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_guardian_logo"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/news_feed_source_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text="@string/source_prefix"
        android:fontFamily="@font/guardian" />

    <TextView
        android:id="@+id/news_feed_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text="@string/source_name"
        android:fontFamily="@font/guardian" />

</LinearLayout>